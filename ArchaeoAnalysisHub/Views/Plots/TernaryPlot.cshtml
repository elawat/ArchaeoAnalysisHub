@model ArchaeoAnalysisHub.ViewModels.TernaryPlotViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        line.tick {
            stroke-width: 0.5px;
        }

        line.minor-tick {
            stroke-width: 1;
            stroke-opacity: 0.1;
        }

        .a-axis {
            stroke: #333;
        }

        .b-axis {
            stroke: #333;
        }

        .c-axis {
            stroke: #333;
        }

        .axis-title {
            font-size: 1.5rem;
        }

        text.tick-text {
            font-weight: lighter;
            font-size: 1rem;
            fill: #333;
            stroke: none;
        }

        circle {
            fill: #DB7365;
            stroke: #DB7365;
            stroke-width: 2px;
        }

        #id1 {
            fill: blue;
            stroke: blue;
        }
    </style>
</head>

<h2>@Model.Heading</h2>

@Html.Partial("_CreateTernaryPlotPartial", Model)

<div class="row">
    <div class="col-md-8">
        <div id="plot"></div>
    </div>
    <div class="col-md-4">
        <h4>Analyses:</h4>
        <div id="analyses-list"></div>
    </div>
</div>

<script charset="UTF-8" src="http://cdnjs.cloudflare.com/ajax/libs/d3/3.1.6/d3.min.js"></script>

@section scripts
{
    @Scripts.Render("~/bundles/js-site-ternary-plot")
}